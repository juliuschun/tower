{
  "name": "claude-desk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "PORT=32355 HOST=0.0.0.0 GIT_AUTO_COMMIT=true WORKSPACE_ROOT=$HOME/workspace tsx watch backend/index.ts",
    "dev:frontend": "vite --host 0.0.0.0 --port 32354",
    "build": "vite build && tsc -p tsconfig.backend.json",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop claude-desk",
    "restart": "echo '⚠️  개발 중에는 npm run dev 를 사용하세요. restart는 production 전용 (DB 경로가 달라짐)' && npm run build && pm2 restart claude-desk",
    "logs": "pm2 logs claude-desk --lines 50",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@codemirror/lang-javascript": "^6.2.0",
    "@codemirror/lang-json": "^6.0.0",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/lang-python": "^6.1.0",
    "@codemirror/theme-one-dark": "^6.1.0",
    "@uiw/react-codemirror": "^4.23.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^4.0.0",
    "concurrently": "^9.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.0",
    "mermaid": "^11.12.3",
    "multer": "^2.0.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^9.0.0",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "sonner": "^2.0.7",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bcryptjs": "^2.4.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "jsdom": "^28.1.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
